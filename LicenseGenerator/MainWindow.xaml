<Window
    x:Class="LicenseGenerator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LicenseGenerator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="R-Link License Generator"
    Width="400"
    Height="250"
    FontSize="16"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="20" />

        </Grid.RowDefinitions>
        <StackPanel>
            <Label Margin="10,10,0,0" Content="Enter the UUID: " />
            <TextBox
                x:Name="TextBoxUUID"
                Grid.Row="0"
                Height="30"
                Margin="15,0,10,0" />
            <Label Margin="10,0,0,0" Content="My UUID: " />
            <TextBox
                x:Name="TextBoxMyUUID"
                Grid.Row="0"
                Height="30"
                Margin="15,0,10,10"
                Background="LightGray"
                IsReadOnly="True" />
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button
                    x:Name="GetUUID"
                    Width="80"
                    Height="35"
                    Margin="0,0,10,0"
                    Background="#0fb7fa"
                    BorderThickness="0"
                    Click="GetUUID_Click"
                    Content="Get UUID"
                    FontSize="14"
                    Foreground="White" />
                <Button
                    x:Name="Generate"
                    Width="80"
                    Height="35"
                    Margin="0,0,10,0"
                    Background="#0fb7fa"
                    BorderThickness="0"
                    Click="Generate_Click"
                    Content="Generate"
                    FontSize="14"
                    Foreground="White" />
                <Button
                    x:Name="Browse"
                    Width="80"
                    Height="35"
                    Margin="0,0,10,0"
                    Background="#8b9ea6"
                    BorderThickness="0"
                    Click="Br_Click"
                    Content="Browse..."
                    FontSize="14"
                    Foreground="White" />
            </StackPanel>
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <TextBlock
                x:Name="Status"
                Margin="0,0,10,0"
                FontSize="12"
                FontStyle="Italic"
                Text="Email: dipesteam@mylangroup.com" />
        </StackPanel>

    </Grid>
</Window>
